<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, id: "song_artist_name" %>
  <%= f.label :genre_name %>
  <%= f.collection_select :genre_name, Genre.all, :name, :name, {}, {id: "song_genre_id"} %>
  <%= f.label "Song Notes" %>
  <input id="song_notes_1" type="text" name="song[note_contents][]">
  <input id="song_notes_2" type="text" name="song[note_contents][]">
  <input id="song_notes_3" type="text" name="song[note_contents][]">
  <br />

  <%= f.submit %>
<% end %>
